// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  email          String   @unique
  firstName      String
  lastName       String
  phoneNumber    String?
  description    String?
  profilePicture String?
  password       String
  routes         Route[]
}

model Route {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String   @unique
  description  String
  coverPhoto   String
  difficulty   String
  type         String
  distance     String
  length       String
  location     String?
  participants Int?
  User         User?    @relation(fields: [userId], references: [id])
  userId       Int?
}
